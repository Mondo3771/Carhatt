<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape android:shape="rectangle"  >
        <solid android:color="@color/Teal"/>
        <corners android:radius="40dp"/>
        <stroke android:width="10dp" android:color="@color/Teal"/>
        <padding android:top="-5dp" android:bottom="-5dp" android:left="-2dp" android:right="-2dp"/>
    </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/Blue"/>
            <corners android:radius="40dp"/>
            <stroke android:width="40dp" android:color="@color/Teal"/>
            <padding android:top="-5dp" android:bottom="-5dp" android:left="-2dp" android:right="-2dp"/>
        </shape>
    </item>
</selector>